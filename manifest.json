{
  "manifest_version": 3,
  "name": "Salesforce Helper",
  "version": "1.0",
  "permissions": ["activeTab", "clipboardRead", "tabs", "cookies"],
  "host_permissions": [
    "https://*.salesforce.com/*",
    "https://*.force.com/*",
    "https://*.cloudforce.com/*",
    "https://*.visualforce.com/*"
  ],
  "icons": {
    "16": "icons/logo16.png",
    "32": "icons/logo32.png",
    "48": "icons/logo48.png",
    "128": "icons/logo128.png"
  },
  "action": {
    "default_icon": {
      "32": "icons/logo32.png"
    },
    "default_title": "Salesforce Helper",
    "default_popup": "popup/popup.html"
  }
}
